---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import KaijiImage from "../src/images/kaiji01.png";
---

<Layout title="First Astro">
    <ul role="list" class="link-card-grid">
        <Card
            imageUrl="../src/images/kaiji01.png"
            imageDiscription="カイジの画像"
        />
        <Card
            imageUrl="../src/images/jojo01.jpeg"
            imageDiscription="ジョジョの画像"
        />
        <Card
            imageUrl="../src/images/naruto01.jpg"
            imageDiscription="ナルトの画像"
        />
